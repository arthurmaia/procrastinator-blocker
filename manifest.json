{
  "manifest_version": 3,
  "name": "Procrastination Blocker",
  "version": "1.0",
  "permissions": ["storage", "webNavigation", "tabs", "alarms"],
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
